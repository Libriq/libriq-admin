---
const { title, desc } = Astro.props;
---

<div class="mb-10">
  <h4 class="text-3xl font-serif font-semibold mb-1">{title}</h4>
  <hr/>
  <div class="flex max-w-4xl flex-row justify-between items-center mt-3">
    <p class="text-xl font-sans max-w-2xl font-light ml-2 mr-6">{desc}</p>
    <slot />
  </div>
</div>
