---
import Layout from '../../layouts/Layout.astro';
import LoginForm from '../../islands/LoginForm';
import Threads from '../../components/Threads';
---

<Layout pageTitle='Connexion'>
  <div class='fixed z-50 w-full h-full flex flex-col justify-center items-center'>
    <div class='p-20 mx-auto border border-white rounded-3xl backdrop-blur-md'>
      {/* Header */}
      <div class='w-full flex flex-col mb-10 text-white'>
        <h3 class='text-4xl font-bold mb-2'>Connexion</h3>
        <p class='text-lg mb-4'>Bon retour! Veuillez entrer vos identifiants.</p>
      </div>

      {/* Login Form */}
      <LoginForm url={Astro.url} client:load />
    </div>
  </div>
  <div class='w-full h-screen flex'>
    {/* Background */}
    <div class='w-full h-full flex flex-col bg-gray-950 items-center justify-center'>
      <div class='w-full h-[600px] my-auto'>
        <Threads
          amplitude={1}
          distance={0}
          enableMouseInteraction={false}
          client:load
        />
      </div>
    </div>
  </div>
</Layout>
