---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";
import Threads from "../../components/Threads";
import HomeButtons from "../../islands/HomeButtons";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<Layout pageTitle={t("nav.home")}>
  <div class="fixed z-50 w-full h-[80dvh] flex flex-col justify-center items-center">
    <div class="p-20 mx-auto">
      <div class="w-full flex flex-col mb-10 text-white">
        <h3 class="text-8xl underline font-serif font-bold mb-2 mx-auto">{t('app.name')}</h3>
        <p class="text-2xl font-sans font-light mb-4 mx-auto">Your library. Your updates. Instantly.</p>
        <HomeButtons lang={lang} client:load />
      </div>
    </div>
  </div>
  <div class="w-full h-[85dvh]">
    <Threads
      amplitude={2}
      distance={0}
      enableMouseInteraction={false}
      client:load
    />
  </div>
</Layout>
